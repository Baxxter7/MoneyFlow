@model List<ServiceVM>

@{
    ViewData["Title"] = "Services";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold">Services</h2>
        <a href="/Service/New"  class="btn btn-success px-3"><i class="bi bi-plus-circle"></i> New Service</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th style="width: 180px;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td style="width: 180px;">
                    <a href="/Service/Edit/@item.ServiceId" class="btn btn-primary btn-sm me-1"><i class="bi bi-pencil"></i></a>
                    <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.ServiceId)"><i class="bi bi-trash3-fill"></i></button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
<script>
 

function deleteItem(serviceId) {
    /*
    if (confirm("are you sure delete")) {
        window.location.href = '@Url.Action("Delete", "Service")' + '?id=' + serviceId;
    }
    */

    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '@Url.Action("Delete", "Service")' + '?id=' + serviceId;
            Swal.fire({
                title: "Deleted!",
                text: "Your file has been deleted.",
                icon: "success"
            });
        }
    });

}
</script>